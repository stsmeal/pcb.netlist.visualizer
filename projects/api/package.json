{
  "name": "pcb-netlist-visualizer-api",
  "version": "1.0.0",
  "private": true,
  "description": "PCB Netlist Visualizer API",
  "main": "app.js",
  "scripts": {
    "tsc": "tsc",
    "start": "tsc && NODE_ENV=production node ./dist/src/app",
    "start:watch": "NODE_ENV=production tsc --watch",
    "start:dev": "tsc && NODE_ENV=development node ./dist/src/app",
    "start:dev:watch": "NODE_ENV=development tsc --watch",
    "server-debug": "node --nolazy --inspect-brk=37652 ./dist/bootstrap port=3055",
    "build": "tsc",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "prettier --check . && tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false"
  },
  "dependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/express-jwt": "^6.0.4",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/mongodb": "^4.0.7",
    "@types/mongoose": "^5.11.97",
    "@types/swagger-jsdoc": "^6.0.4",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express-jwt": "^6.1.2",
    "inversify": "^6.2.2",
    "inversify-express-utils": "^6.5.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.17.0",
    "mongoose": "^8.16.2",
    "prettier": "^3.6.2",
    "reflect-metadata": "^0.2.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/jest": "^29.5.5",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.8",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^8.15.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1"
  }
}
