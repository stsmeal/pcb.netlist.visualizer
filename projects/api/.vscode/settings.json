{
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        "**/*.js.map": true,
        "**/*.js": {
            "when": "$(basename).ts"
        }
    },
    "eslint.enable": false,
    "jshint.enable": false,
    "tslint.enable": false,
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.codeActionsOnSave": {
        "source.fixAll": "explicit"
    },
    "prettier.requireConfig": true,
    "files.eol": "\n"
}